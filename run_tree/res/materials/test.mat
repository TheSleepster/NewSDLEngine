# this is a comment, this is also a standard normal material
material_name: "Basic Builtin Material";
shader_binary_name: "test.spv";

uses_diffuse_map: true;
uses_normal_map: false;

# doubles are marked with d, unsigned values are marked with u, example: "value: 4.0d, value2: 4u"

renderer_effect_application_flags: REAF_Emmision|REAF_Bloom;

# this stores the whole pipeline state.
render_pipeline_state: {
    blend_enabled: true
    stencil_enabled: false
    depth_testing_enabled: true
    depth_writing_enabled: true
    depth_func: OP_LESS

    color_blend_op: ADD
    alpha_blend_op: ADD
    src_color_blend_mode: SRC_ALPHA
    dst_color_blend_mode: ONE_MINUS_SRC_ALPHA

    src_alpha_blend_mode: SRC_ALPHA
    dst_alpha_blend_mode: ONE_MINUS_SRC_ALPHA
};

# default shader uniform data
shader_binary_name/RenderIntensityUBO: {
    emmision_vibrance: 1.0,
    bloom_value: 1.5
};


