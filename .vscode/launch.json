{
    // Debug configurations for Linux (CodeLLDB)
    "version": "0.2.0",
    "configurations": [
        {
            "name": "game_debug (host)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/game_debug",
            "args": ["--host", "7777"],
            "cwd": "${workspaceFolder}/run_tree/res",
            "stopOnEntry": false,
            "terminal": "integrated"
        },
        {
            "name": "game_debug (client)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/game_debug",
